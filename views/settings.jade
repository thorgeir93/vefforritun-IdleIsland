extends layout

block content
	link(rel='stylesheet', href='/stylesheets/settings.css')
	script(type='text/javascript' src='/game/settings.js')
	div.settings
		div.main
			h1= title

			form(method='post' action='/settings')
				div.formgroup
					label(
						class='label-audio'
						for='audio-slider') Audio
					input(
						type='range' 
						name='audio-slider'
						class='audio-slider'
						min='0' 
						max='100' 
						value='20')
					p(class='audio-number' value='33' text='332') 
				div.formgroup
					label(for='fullscreen' id='label-fullscreen') Fullscreen
					input(type="checkbox" name="checkboxG1" id="fullscreen")
					div(class='checkbox' id="checkbox-off")
			p: a(href='/menu') Back to Menu

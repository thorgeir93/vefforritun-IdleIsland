extends layout
block content
	link(rel='stylesheet', href='/stylesheets/autheration.css')
	div.login
		h1= title
		div.middle
			form(method=method, action=action)
				if error
					p= errorMessage

				input(
					type='text',
					id='username',
					name='username',
					placeholder='user name')

				input(	
					type='password',
					id='password',
					name='password'
					placeholder='password')

				button= btnTitle
				a(href=linkHref)= linkText